<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Bluetooth Permissions -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />

    <!-- SMS Permissions -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <!-- Contacts Permissions -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <!-- File Storage Permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Internet (for future features) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Telephony -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SBMS"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Messaging Activities -->
        <activity
            android:name=".messaging.ConversationListActivity"
            android:exported="false" />

        <activity
            android:name=".messaging.ThreadActivity"
            android:exported="false" />

        <activity
            android:name=".messaging.ComposeActivity"
            android:exported="false" />

        <!-- Services -->
        <service
            android:name=".bluetooth.OppServerService"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".bluetooth.OppClientService"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".sms.SmsRelayService"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".contacts.ContactSyncService"
            android:enabled="true"
            android:exported="false" />

        <!-- Broadcast Receivers -->
        <receiver
            android:name=".sms.SmsStatusReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND_SMS" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".sms.SmsIncomingReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
